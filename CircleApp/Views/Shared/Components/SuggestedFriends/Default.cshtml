@model List<UserWithFriendsCountVM>


<div class="flex items-baseline justify-between text-black">
    <h3 class="font-bold text-base"> People you may know </h3>
</div>

<div class="side-list">
    @foreach(var suggestedFriend in Model)
    {
        <div class="side-list-item">
            <a>
                <img src="@Url.Content(suggestedFriend.ProfilePictureUrl ?? "~/images/avatar/user.png")" class="side-list-image rounded-full" />
            </a>
            <div class="flex-1">
                <a>
                    <h4 class="side-list-title">
                        @suggestedFriend.FullName
                    </h4>
                </a>
                <div class="side-list-info">@suggestedFriend.FriendsCountDisplay</div>
            </div>
            <form asp-action="SendFriendRequest" asp-controller="Friends" method="POST">
                <input type="hidden" name="receiverId" value="@suggestedFriend.UserId" />
                <button type="submit" class="button bg-primary-soft text-primary">Follow</button>
            </form>
        </div>
    }
</div>    
